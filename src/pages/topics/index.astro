---
import BaseLayout from '@layouts/Base.astro'
import { getCollection } from 'astro:content'

const topics = await getCollection('topics')
---

<BaseLayout>
  <div slot="body">
    <h1 class="font-title text-2xl text-off-white">Topics I write about</h1>

    <ul>
      {
        topics.map(topic => (
          <li class="my-2">
            <a
              href={`/topics/${topic.id}`}
              class:list={[
                'justify-cente flex flex items-center py-1 font-label text-xxs uppercase text-gray',
                `hover:text-${topic.id}`,
              ]}
            >
              <img src={topic.data.icon} class="mr-1" /> {topic.data.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</BaseLayout>
