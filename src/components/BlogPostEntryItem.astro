---
interface Props {
  date: Date;
  title: string;
  excerpt: string;
  url: string
}

const { date, title, excerpt, url } = Astro.props;
---

<div class="flex flex-col mt-14">
  <p class="font-label text-xxs text-light-blue uppercase">
    {
      Intl.DateTimeFormat("en-US", {
        year: "numeric",
        month: "short",
        day: "numeric",
      }).format(date)
    }
  </p>
  <a href={url}><h2 class="text-xl font-title text-off-white hover:text-highlight tracking-wide">{title}</h2></a>
  <p class="text-sm font-sans text-gray font-extralight tracking-wide">{excerpt}</p>
</div>
